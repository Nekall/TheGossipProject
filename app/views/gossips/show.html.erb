<h1>Page de show d'un potin unique</h1>

<h2><%= @gossip.title %></h2>

<p><%= @gossip.content %></p>

<p><a href="<%= user_path(@gossip.user_id) %>" ><%= User.find(@gossip.user_id).first_name %> <%= User.find(@gossip.user_id).last_name %></a></p>
<!-- <p><a href="<3%= city_path(User.find(@gossip.user_id).city_id) %>" ><3%= User.find(@gossip.user_id).city.city_name %></a></p> -->

<div class="card my-1">
  <div class="card-body">
    <p class="font-weight-bold">Commentaires</p>
    <%= form_with(model: [@gossip, @gossip.comments.build]) do |f| %>
      <div class="form-group">
        <%= f.label 'Nouveau commentaire' %>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <%= f.submit 'Poster', class: 'btn btn-dark' %>
    <% end %>
  </div>
</div>
<%= render @gossip.comments %>
